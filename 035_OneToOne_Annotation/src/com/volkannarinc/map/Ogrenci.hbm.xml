<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>
    <class name="com.volkannarinc.map.Ogrenci"	
    		table="ogrenci"	
    		catalog="denemevt">
        
        <id name="ogrenciId" type="java.lang.Integer">
            <column name="OGRENCI_ID"/>
            <generator class="identity"/>
        </id>
        
        <property name="ogrenciAdi" type="string">
        	<column name="OGRENCI_ADI" length="50" not-null="true" unique="true"/>
        </property>
        
        <property name="ogrenciSoyadi" type="string">
        	<column name="OGRENCI_SOYADI" length="50" not-null="true" unique="true"/>
        </property>
        
        <one-to-one name="ogrenciBilgisi" 
        			class="com.volkannarinc.map.OgrenciBilgisi"
        			cascade="save-update"></one-to-one>
        

    </class>

</hibernate-mapping>
        